
3.1) 

public class test{
	public static void main(String[] args) {
		int num = 5 ; 
		if(num > 2 ){
			System.out.println(num) ; 
			num -= 1 ; 
		}
	System.out.println(num) ; 
	}
}

3.2)

public class test{
	public static void main(String[] args) {
		int num = 0 ; 
		while(num <= 5){
			System.out.println(num) ; 
			num +=1 ; 
		}
		System.out.println("Outside of loop") ; 
		System.out.println(num) ; 
	}
}

