#include <iostream>
using namespace std; 

struct node {
	int data ; 
	node *next ; 
}*head;

class Stack{
	public : 
	Stack();
	void print() ; 

	// insertion 
	void push(int ) ; 

	// deletion 
	void pop() ; 
};

Stack::Stack(){
	head = NULL ;
}

node* Stack::node_create(int num){
	node *temp = new node() ; 
	temp->data = num ;
	temp->next = NULL ;
	return temp ; 
}

void Stack::push(int num){
	node *temp = node_create(num) ; 

	//  this way all the nodes that are inserted are done so at the end 

/*	//----this insertion is for queues
	if(head == NULL){
		head = temp ; 
		end = temp ; 
	}
	else{
		end->next = temp ; 
		end = temp ; 	
	}
*/
 	temp->next = head ; 
 	head = temp ; 
 	//  element is always inserted at the head 

	cout << "\nAfter insertion : "  ;
	print() ; 
}

void Stack::print(){
	node *temp = head  ;

	cout << "\nStack : " ; 
	while (temp != NULL){
		cout << temp->data << " " ; 
		temp = temp->next  ; 
	}
	cout << "\n" ; 
}

